# Development Dockerfile
FROM node:18-alpine

# Install dependencies
RUN apk add --no-cache libc6-compat curl

WORKDIR /app

# Copy package files
COPY package.json yarn.lock* package-lock.json* pnpm-lock.yaml* ./

# Install dependencies
RUN \
  if [ -f yarn.lock ]; then yarn; \
  elif [ -f package-lock.json ]; then npm install; \
  elif [ -f pnpm-lock.yaml ]; then yarn global add pnpm && pnpm install; \
  else echo "Lockfile not found." && exit 1; \
  fi

# Copy source code
COPY . .

# Set environment variables for development
ENV VITE_API_BASE_URL=https://cmms-callfairy-handyman-production.up.railway.app
ENV NODE_ENV=development

# Expose port
EXPOSE 5173

# Start development server
CMD \
  if [ -f yarn.lock ]; then yarn dev --host 0.0.0.0; \
  elif [ -f package-lock.json ]; then npm run dev -- --host 0.0.0.0; \
  elif [ -f pnpm-lock.yaml ]; then yarn global add pnpm && pnpm dev --host 0.0.0.0; \
  else echo "Lockfile not found." && exit 1; \
  fi
